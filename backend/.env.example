# Application Settings
APP_NAME="Onboarding Dashboard"
DEBUG=false
SECRET_KEY=your-secret-key-here-use-openssl-rand-hex-32

# Database
DATABASE_URL=sqlite+aiosqlite:///./onboarding.db

