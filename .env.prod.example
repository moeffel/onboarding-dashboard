# Onboarding Dashboard - Production Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=Onboarding Dashboard
DEBUG=false

# Secret key for session encryption (generate with: openssl rand -hex 32)
SECRET_KEY=

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DB_USER=onboarding
DB_PASSWORD=  # Use a strong password (generate with: openssl rand -base64 32)

# Full database URL (uses DB_USER and DB_PASSWORD from above)
# Format: postgresql+asyncpg://{user}:{password}@{host}:{port}/{database}
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@db:5432/onboarding

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# CORS Configuration
# =============================================================================
# Allowed origins for CORS (JSON array format)
# Example: ["https://dashboard.example.at", "https://www.dashboard.example.at"]
CORS_ORIGINS=["https://dashboard.example.at"]

# =============================================================================
# Session Configuration
# =============================================================================
SESSION_COOKIE_NAME=session
SESSION_MAX_AGE=28800  # 8 hours in seconds

# =============================================================================
# Security Settings
# =============================================================================
BCRYPT_ROUNDS=12
RATE_LIMIT_LOGIN=5/minute
CSRF_TOKEN_EXPIRY=3600  # 1 hour

# =============================================================================
# Data Retention (DSGVO Compliance)
# =============================================================================
# Number of days to retain user data (default: 730 = 2 years)
DATA_RETENTION_DAYS=730

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
# Path to SSL certificates (mounted in docker-compose)
# - Place fullchain.pem and privkey.pem in ./ssl/ directory
# - Or use certbot/letsencrypt for automatic certificate management

# =============================================================================
# Optional: Watchtower (Automatic Updates)
# =============================================================================
# Set to 86400 for daily checks (in seconds)
WATCHTOWER_INTERVAL=86400
